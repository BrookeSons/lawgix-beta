<p id="notice"><%= notice %></p>

<h1>Listing Title Abstracts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @title_abstracts.each do |title_abstract| %>
      <tr>
        <td><%= title_abstract.name %></td>
        <td><%= title_abstract.due_date %></td>
        <td><%= title_abstract.comments %></td>
        <td><%= link_to 'Show', title_abstract %></td>
        <td><%= link_to 'Edit', edit_title_abstract_path(title_abstract) %></td>
        <td><%= link_to 'Destroy', title_abstract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

