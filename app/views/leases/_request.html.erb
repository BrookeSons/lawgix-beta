<div class="tab-content flex-box flex-box-full">
  <div>
    <fieldset>
      <div id="lease_numb">
        <% if @project %>
            <%= f.association :project, input_html: {hidden: true}, label_html: {hidden: true} %>
        <% end %>
      </div>
      <div id="state-select">
        <%= f.label :state %>
        <%= f.select :state, collection: ['Pennsylvania', 'Ohio', 'West Virginia'] %>
      </div>
      <div id="lease_numb">
        <%= f.label :lease_number %>
        <%= f.text_field :lease_number %>
      </div>
      <section class="lease-dates">
        <div class="lease-start-date">
          <%= f.label :start_date %>
          <%= f.date_field :start_date %>
        </div>
        <div class="lease-end-date">
          <%= f.label :end_date %>
          <%= f.date_field :end_date %>
        </div>
      </section>
      <table>
        <thead>
          <tr>
            <td>Instrument</td>
            <td>Acres</td>
            <td>Bonus</td>
            <td>Royalty</td>
            <td>Stations</td>
          </tr>
        </thead>
          <tr>
            <td><%= f.input :ogl, as: :boolean, label: "Oil & Gas Lease" %></td>
            <td><%= f.input :ogl_acres, label: false %></td>
            <td><%= f.input :ogl_bonus, label: false %></td>
          </tr>
          <tr>
            <td><%= f.input :surface, as: :boolean, label: "Surface Rights" %></td>
            <td><%= f.input :surface_acres, label: false %></td>
            <td><%= f.input :surface_bonus, label: false %></td>
          </tr>


      </table>
