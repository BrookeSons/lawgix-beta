<div class="flex-boxes">
  <div class="flex-box flex-box-full">
    <h2 class="flex-title">Service Request</h2>
      <%= simple_form_for @service do |f| %>
          <ul class="accordion-tabs-minimal">
            <li class="tab-header-and-content">
              <a href="#" class="tab-link is-active">Request</a>
              <%= render 'request', f: f %>
            </li>
            <li class="tab-header-and-content">
              <a href="#" class="tab-link">Lessor</a>
              <div class="tab-content">
                <div class="nested-fields">
                  <%= f.simple_fields_for :lessees do |lessee| %>
                      <%= render 'lessee_fields', f: lessee %>
                      <%= link_to_add_association "Add Lessor", f, :lessees %>
                  <% end %>
                </div>
              </div>
            </li>
            <li class="tab-header-and-content">
              <a href="#" class="tab-link">Parcel</a>
              <div class="tab-content">
                <div class="nested-fields">
                  <%= f.simple_fields_for :parcels do |parcel| %>
                      <%= render 'parcel_fields', f: parcel %>
                  <% end %>
                </div>
              </div>
            </li>
            <li class="tab-header-and-content">
              <a href="#" class="tab-link">Status</a>
              <div class="tab-content">
                <table>
                  <thead>
                  <tr>
                    <th><h4>Current Status</h4></th>
                    <th><h4>Abstractor</h4></th>
                    <th><h4>Email</h4></th>
                    <th><h4>Phone</h4></th>
                  </tr>
                  </thead>
                    <% @service.users.each do |abstractor| %>
                 <tr>
                   <td><h6><%= @service.current_state %></h6></td>
                   <td><h5><%= abstractor.name %></h5></td>
                   <td><h5><%= abstractor.email %></h5></td>
                   <td><h5><%= abstractor.phone %></h5></td>
                <% end %>
                </tr>
              </table>
              </div>
            </li>
          </ul>
       <%= f.submit 'Update Service Request' %>
    <% end %>
  </div>
</div>
