<%= simple_form_for(@deed) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :db %>
      <%= f.input :db_page %>
      <%= f.input :d_date %>
      <%= f.input :grantor %>
      <%= f.input :grantee %>
      <%= f.input :d_type %>
      <%= f.input :comments %>
      <%= f.simple_fields_for :document do |document| %>
          <%= document.file_field %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
