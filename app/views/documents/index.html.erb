<p id="notice"><%= notice %></p>
<div class="flex-boxes">
  <a href="javascript:void(0)" class="flex-box flex-box-full">
    <h2 class="flex-title">Documents</h2>


    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Due date</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @documents.each do |document| %>
          <tr>
            <td><%= document.name %></td>
            <td><%= document.doc_type %></td>
            <td><%= link_to 'Show', document %></td>
            <td><%= link_to 'Edit', edit_document_path(document) %></td>
            <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </a>
</div>

