<div class="flex-boxes">
  <div class="flex-box flex-box-full">
    <h3>Abstractor</h3>
    <%= simple_form_for @abstractor do |f| %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.text_field :password %>
        <%= f.submit 'Update Abstractor' %>
    <% end %>
 </div>
</div>
