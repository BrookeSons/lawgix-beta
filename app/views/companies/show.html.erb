<div class="flex-boxes">
   <div class="flex-box flex-box-full">
      <h1><%= @company.name %></h1>
          <%= simple_form_for @company do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %>
              <%= f.label :billing_contact %>
              <%= f.text_field :billing_contact %>
              <%= f.label :phone %>
              <%= f.text_field :phone %>
              <%= f.label :email %>
              <%= f.text_field :email %>
              <%= f.label :city %>
              <%= f.text_field :city %>
              <%= f.label :state %>
              <%= f.text_field :state %>
              <%= f.label :zip %>
              <%= f.text_field :zip %>
              <%= f.submit 'Update Company' %> 
          <% end %>
       </div>
    </div>
</div>
